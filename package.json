{
  "name": "aalvaropc-home",
  "version": "1.0.0",
  "description": "aalvaropc's website",
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "prettier": "prettier -write .",
    "lint": "next lint",
    "security-audit": "pnpm audit",
    "security-check": "pnpm outdated && pnpm audit",
    "type-check": "next build --no-lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "analyze": "ANALYZE=true npm run build",
    "lighthouse": "lhci collect --upload.target=filesystem --upload.outputDir=./lighthouse-results",
    "sitemap:generate": "next-sitemap",
    "bundle:analyze": "npx @next/bundle-analyzer",
    "perf:audit": "npm run build && npm run lighthouse",
    "seo:validate": "next-seo-validate",
    "clean": "rimraf .next out",
    "precommit": "npm run lint && npm run type-check && npm run test:ci"
  },
  "keywords": [],
  "author": "Alvaro Rodrigo Peña Peña<aalvaropc@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^2.10.9",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "framer-motion": "^12.23.22",
    "next": "^15.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^4.12.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^8.57.1",
    "eslint-config-next": "^13.5.11",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^2.8.8"
  }
}
